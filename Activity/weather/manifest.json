    { "name": "WEATHER_UNITS", "label": "단위(metric/imperial)" },
    { "name": "LOG_LEVEL", "label": "로그 레벨" }
  ],
  "tools": [
    { "function_name": "current_weather", "description": "지정한 도시의 현재 날씨를 조회합니다.", "enabled": true },
    { "function_name": "simple_forecast", "description": "지정한 도시의 간단 예보를 조회합니다.", "enabled": true }
